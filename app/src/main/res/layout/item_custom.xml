<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:descendantFocusability="blocksDescendants"

               >

    <RelativeLayout
        android:layout_width="20dp"
      android:layout_alignParentLeft="true"
        android:id="@+id/rl_guid"
        android:layout_marginTop="15dp"
        android:layout_height="80dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_guids"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"

            android:src="@mipmap/dingwei"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_toRightOf="@+id/rl_guid"
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"

        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="21212"
            android:textColor="@color/item_phone"
            android:textSize="23sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:id="@+id/tv_mobile"
            android:layout_marginRight="24dp"
            android:textColor="@color/item_phone"
            android:text="13989999999"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="15dp"

            android:id="@+id/tv_dc"
            android:layout_marginTop="14dp"
            android:singleLine="false"
            android:textColor="@color/item_dc"
            android:text=""
            android:textSize="16sp"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_item_go"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       android:focusable="false"
        android:clickable="true"
        android:src="@mipmap/go"/>

</RelativeLayout>